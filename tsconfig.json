{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": { "*": ["types/*"], "src/*": ["src/*"] },
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "noFallthroughCasesInSwitch": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react-native",
    "lib": [
      "es6"
    ],
    "moduleResolution": "node",
    "noEmit": true,
    "strict": true,
    "target": "es6"
  },
  "exclude": [
    "node_modules"
  ]
}
